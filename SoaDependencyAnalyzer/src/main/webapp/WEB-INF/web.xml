<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<display-name>SoaDependencyAnalyzer</display-name>
	
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:helloWorldContext.xml</param-value>
	</context-param>
	<context-param>
		<param-name>workspacePath</param-name>
		<param-value>/product/SoaDependencyAnalyzer/ws/</param-value>
	</context-param>
	
<!-- 	<context-param> -->
<!-- 		<param-name>workspacePath</param-name> -->
<!-- 		<param-value>D:/calismalar/ws7ws_test</param-value> -->
<!-- 	</context-param> -->
	
	
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<listener>
		<listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
	</listener>

	<context-param>
		<param-name>javax.faces.PROJECT_STAGE</param-name>
		<param-value>Development</param-value>
	</context-param>
	<welcome-file-list>
		<welcome-file>/pages/index.xhtml</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.jsf</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.faces</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>UpdateDBServlet</servlet-name>
		<servlet-class>com.avea.dependencyanalyzer.servlet.UpdateDBServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UpdateDBServlet</servlet-name>
		<url-pattern>/UpdateDBServlet</url-pattern>
	</servlet-mapping>
</web-app>